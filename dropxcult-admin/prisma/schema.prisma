generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  name            String
  email           String   @unique
  phone           String?  // Mobile number
  username        String?  @unique // Unique @username for search
  password        String
  isAdmin         Boolean  @default(false)
  
  // Profile Fields
  image           String?
  banner          String?  // Custom profile banner image
  bio             String?  @default("Just another cult member.")
  
  // Cult Gamification
  rank            String   @default("Initiate")
  ordersCount     Int      @default(0)
  designsApproved Int      @default(0)
  
  // Royalty System
  royaltyPoints   Int      @default(0)
  royaltyEarnings Int      @default(0)
  
  // Referral Program
  referralCode    String?   @unique
  referredById    String?
  referralCredits Float     @default(0)
  
  // Social / Follow counts
  followersCount  Int      @default(0)
  followingCount  Int      @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  orders          Order[]
  customRequests  CustomRequest[]
  likedRequests   CustomRequest[] @relation("UserLikes")
  designers        Design[]
  preorders       Preorder[]
  reviews         Review[]
  addresses       Address[]
  preOrderEntries PreOrderEntry[]
  
  // Community relations
  designLikes     DesignLike[]
  designComments  DesignComment[]
  followers       Follow[] @relation("Followers")
  following       Follow[] @relation("Following")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  price       Float
  category    String // Collection name
  garmentType String @default("T-Shirt") // "T-Shirt" or "Hoodie"
  images      String[]
  sizes       String[] @default(["S", "M", "L", "XL", "XXL"])
  colors      String[]
  stock       Int      @default(0)
  isFeatured  Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orderItems      OrderItem[]
  preorders       Preorder[]
  reviews         Review[]
  campaigns       PreOrderCampaign[]
  preOrderItems   PreOrderEntryItem[]
}

model Order {
  id              String      @id @default(cuid())
  userId          String?
  user            User?       @relation(fields: [userId], references: [id])
  
  orderItems      OrderItem[]
  
  // Shipping Address (Embedded in Mongoose, JSON in Postgres)
  shippingAddress Json
  
  paymentMethod   String
  
  // Payment Result (Embedded in Mongoose, JSON in Postgres)
  paymentResult   Json?
  
  itemsPrice      Float       @default(0.0)
  shippingPrice   Float       @default(0.0)
  taxPrice        Float       @default(0.0)
  totalPrice      Float       @default(0.0)
  
  isPaid          Boolean     @default(false)
  paidAt          DateTime?
  
  isDelivered     Boolean     @default(false)
  deliveredAt     DateTime?
  
  status          String      @default("Processing")
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  name      String
  qty       Int
  image     String
  price     Float
  size      String
  
  designId  String?  // For linking to custom designs
  isCustom  Boolean  @default(false)

  productId String
  product   Product @relation(fields: [productId], references: [id])
  
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
}

model CustomRequest {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  type            String
  color           String
  size            String
  status          String   @default("Pending")
  
  // Mixed types in Mongoose -> Json in Postgres
  textConfig      Json?
  layers          Json?
  designConfig    Json?
  
  frontImage      String?
  backImage       String?
  leftSleeveImage String?
  rightSleeveImage String?
  
  adminMessage    String?
  isPublicDesign  Boolean  @default(false)
  royaltyAccepted Boolean  @default(false)
  
  likes           User[]   @relation("UserLikes")
  salesCount      Int      @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Design {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  // Design Metadata
  name            String   @default("Untitled Design")
  tshirtType      String   @default("regular") // "regular" or "oversized"
  tshirtColor     String   @default("#ffffff")
  garmentType     String   @default("T-Shirt") // "T-Shirt" or "Hoodie"
  
  // Approval Status
  status          String   @default("Pending") // Pending, Accepted, Rejected, Royalty_Pending, Draft
  rejectionReason String?  // Admin's reason for rejection
  isPublic        Boolean  @default(false) // If true, shows in shop page
  hasRoyaltyOffer Boolean  @default(false) // If admin offered royalty, this becomes true
  wasOfferedRoyalty Boolean @default(false) // True if ever offered royalty (never resets)
  
  // Canvas Data (Fabric.js JSON export)
  canvasState     Json
  
  // Preview Images
  previewImage    String?  // Base64 or URL of the front preview
  
  // Engagement Stats
  likesCount      Int      @default(0)
  commentsCount   Int      @default(0)
  sharesCount     Int      @default(0)
  
  // Community relations
  likes           DesignLike[]
  comments        DesignComment[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Track likes on designs
model DesignLike {
  id        String   @id @default(cuid())
  userId    String
  designId  String
  user      User     @relation(fields: [userId], references: [id])
  design    Design   @relation(fields: [designId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@unique([userId, designId])
}

// Comments on designs
model DesignComment {
  id         String   @id @default(cuid())
  userId     String
  designId   String
  content    String
  likesCount Int      @default(0)
  
  // Threading - parent/replies
  parentId   String?
  parent     DesignComment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies    DesignComment[] @relation("CommentReplies")
  
  user       User     @relation(fields: [userId], references: [id])
  design     Design   @relation(fields: [designId], references: [id], onDelete: Cascade)
  likes      CommentLike[]
  createdAt  DateTime @default(now())
}

// Track likes on comments
model CommentLike {
  id        String        @id @default(cuid())
  userId    String
  commentId String
  comment   DesignComment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  createdAt DateTime      @default(now())
  
  @@unique([userId, commentId])
}

// User follow relationships
model Follow {
  id          String   @id @default(cuid())
  followerId  String   // User who is following
  followingId String   // User being followed
  follower    User     @relation("Following", fields: [followerId], references: [id])
  following   User     @relation("Followers", fields: [followingId], references: [id])
  createdAt   DateTime @default(now())
  
  @@unique([followerId, followingId])
}

// Audit Log for compliance tracking
model AuditLog {
  id           String   @id @default(cuid())
  
  // Who performed the action
  userId       String?
  userEmail    String?
  userRole     String?  // "user", "admin"
  
  // What action was performed
  action       String   // CREATE, READ, UPDATE, DELETE, LOGIN, LOGOUT, etc.
  entity       String   // User, Order, Product, Design, etc.
  entityId     String?  // ID of affected resource
  
  // Context details
  details      Json?    // Additional details (old/new values, etc.)
  ipAddress    String?
  userAgent    String?
  
  // Outcome
  status       String   @default("SUCCESS") // SUCCESS, FAILURE, DENIED
  errorMessage String?
  
  createdAt    DateTime @default(now())
  
  @@index([userId])
  @@index([entity, entityId])
  @@index([action])
  @@index([createdAt])
}

model Inquiry {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String
  status    String   @default("Pending") // Pending, Read, Resolved
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Preorder {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  size      String
  quantity  Int      @default(1)
  notes     String?
  status    String   @default("Pending") // Pending, Notified, Cancelled, Completed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Coupon {
  id             String    @id @default(cuid())
  code           String    @unique
  discountType   String    @default("percentage") // percentage or fixed
  discountValue  Float     // e.g., 10 for 10% or 100 for â‚¹100 off
  minOrderAmount Float     @default(0)
  maxUses        Int?      // null = unlimited
  usedCount      Int       @default(0)
  isActive       Boolean   @default(true)
  expiresAt      DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Review {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  productId      String
  product        Product  @relation(fields: [productId], references: [id])
  rating         Int      // 1-5 stars
  title          String?
  comment        String
  isVerified     Boolean  @default(false) // Verified purchase
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([userId, productId]) // One review per user per product
}

model Address {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  fullName    String
  phone       String
  address     String
  city        String
  state       String
  postalCode  String
  country     String   @default("India")
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ==========================================
// PRE-ORDER CAMPAIGN SYSTEM
// ==========================================

model PreOrderCampaign {
  id              String   @id @default(cuid())
  productId       String
  product         Product  @relation(fields: [productId], references: [id])
  
  name            String
  description     String?
  
  // Timing
  startDate       DateTime
  endDate         DateTime
  
  // Quantity constraints
  minQuantity     Int      @default(50)
  maxQuantity     Int?     // null = unlimited
  
  // Delivery
  deliveryDays    Int      @default(25)  // Days after campaign close
  
  // Status
  status          String   @default("draft") // draft, active, closed, cancelled, fulfilled
  
  // Results (updated when campaign closes)
  totalOrders     Int      @default(0)
  totalQuantity   Int      @default(0)
  totalRevenue    Float    @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  preOrders       PreOrderEntry[]
}

model PreOrderEntry {
  id              String   @id @default(cuid())
  orderNumber     String   @unique  // DXC-PO-12345
  
  campaignId      String
  campaign        PreOrderCampaign @relation(fields: [campaignId], references: [id])
  
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  // Items
  items           PreOrderEntryItem[]
  
  // Totals
  subtotal        Float
  discount        Float    @default(0)
  totalAmount     Float
  
  // Payment
  paymentId       String?   // Razorpay payment ID
  paymentStatus   String    @default("pending") // pending, paid, refunded, failed
  paidAt          DateTime?
  refundId        String?
  refundedAt      DateTime?
  refundReason    String?
  
  // Shipping
  shippingAddress Json
  trackingNumber  String?
  courier         String?
  shippedAt       DateTime?
  deliveredAt     DateTime?
  
  // Status
  status          String   @default("pending")
  // pending -> confirmed -> in_production -> quality_check -> ready_to_ship -> shipped -> delivered
  // pending -> refunded (if min not met or cancelled)
  
  statusHistory   Json     @default("[]")  // [{status, timestamp, note}]
  
  // Customer opted-in for notifications
  notifyEmail     Boolean  @default(true)
  notifyWhatsapp  Boolean  @default(false)
  phone           String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model PreOrderEntryItem {
  id              String   @id @default(cuid())
  preOrderId      String
  preOrder        PreOrderEntry @relation(fields: [preOrderId], references: [id])
  
  productId       String
  product         Product  @relation(fields: [productId], references: [id])
  
  size            String
  quantity        Int
  price           Float    // Price at time of order
  
  createdAt       DateTime @default(now())
}

// Two-Factor Authentication codes for admin login
model TwoFactorCode {
  id        String   @id @default(cuid())
  userId    String   @unique
  code      String
  expiresAt DateTime
  attempts  Int      @default(0)
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([expiresAt])
}

// Withdrawal System
model WithdrawalRequest {
  id              String   @id @default(cuid())
  userId          String
  
  amount          Float
  status          String   @default("pending")
  
  // Bank Details
  accountName     String
  accountNumber   String
  ifscCode        String
  bankName        String
  upiId           String?
  
  // Admin fields
  adminNote       String?
  processedBy     String?
  processedAt     DateTime?
  transactionId   String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}
