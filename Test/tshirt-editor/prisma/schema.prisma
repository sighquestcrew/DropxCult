// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  name            String
  email           String   @unique
  password        String
  isAdmin         Boolean  @default(false)
  
  // Profile Fields
  image           String?
  bio             String?  @default("Just another cult member.")
  
  // Cult Gamification
  rank            String   @default("Initiate")
  ordersCount     Int      @default(0)
  designsApproved Int      @default(0)
  
  // Royalty System
  royaltyPoints   Int      @default(0)
  royaltyEarnings Int      @default(0)
  
  // Social / Follow counts
  followersCount  Int      @default(0)
  followingCount  Int      @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  designs         Design[]
}

model Design {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  // Design Metadata
  name            String   @default("Untitled Design")
  tshirtType      String   @default("regular") // "regular" or "oversized"
  tshirtColor     String   @default("#ffffff")
  
  // Approval Status
  status          String   @default("Draft") // Draft, Pending, Accepted, Rejected, Royalty_Pending
  rejectionReason String?  // Admin's reason for rejection
  isPublic        Boolean  @default(false) // If true, shows in shop page
  hasRoyaltyOffer Boolean  @default(false) // If admin offered royalty
  
  // Canvas Data (Fabric.js JSON export)
  canvasState     Json
  
  // Preview Images
  previewImage    String?  // Base64 or URL of the front preview
  
  // Engagement Stats
  likesCount      Int      @default(0)
  commentsCount   Int      @default(0)
  sharesCount     Int      @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
